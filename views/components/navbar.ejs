<div id="navbar">
    <el-menu :default-active="activeIndex" class="el-menu-demo" mode="horizontal" @select="handleSelect">
        <div class="float-left">
            <el-image
            style="width: 45px; height: 43px; margin-top: 10px; margin-left: 15px; margin-right: 10px;"
            src="/images/icon-ntunhs.jpg"
            fit="fit"></el-image>
        </div>

        <el-menu-item index="1"><i class="fa fa-home" style="font-size: 20px;"></i> 首頁</el-menu-item>
        <el-submenu index="2">
            <template slot="title"><i class="fa fa-user" style="font-size: 20px;"></i> 會員</template>
            <% if (!auth){ %>
            <el-menu-item index="2-1">註冊</el-menu-item>
            <el-menu-item index="2-2">登入</el-menu-item>
            <% } %>
            <el-menu-item index="2-3">使用辦法</el-menu-item>
            <el-submenu index="2-4">
            <template slot="title">資料修改</template>
            <el-menu-item index="2-4-1">選項1</el-menu-item>
            <el-menu-item index="2-4-2">選項2</el-menu-item>
            <el-menu-item index="2-4-3">選項3</el-menu-item>
            </el-submenu>
            <% if (auth){ %>
                <el-menu-item index="2-5">登出</el-menu-item>
            <% } %>
        </el-submenu>
        <el-menu-item index="3" disabled><i class="el-icon-message" style="font-size: 20px;"></i>消息中心</el-menu-item>
        <el-menu-item index="4"><i class="el-icon-s-management" style="font-size: 20px;"></i>管理介面</el-menu-item>
    </el-menu>
</div>

<script>
    new Vue({
        el: "#navbar",
        data: {
            activeIndex: '1',
        },
        created(){
            var vm = this;
            let pathName = window.location.pathname;
            if ( pathName.includes('signup') ){
                vm.activeIndex = "2-1";
            }
            else if ( pathName.includes('login') ){
                vm.activeIndex = "2-2";
            }
            else if ( pathName.includes('management') ){
                vm.activeIndex = "4";
            }
        },
        methods: {
            handleSelect(key, keyPath) {
                switch(key){
                    case "1":
                        location.href = '/';
                        break;
                    case "2-1":
                        location.href = '/signup';
                        break;
                    case "2-2":
                        location.href = '/login';
                        break;
                    case "4":
                        location.href = '/management';
                        break;
                    case "2-5":
                        location.href = '/logout';
                        break;
                }
            }
        }
    });
</script>