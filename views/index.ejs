<% extend('./layouts/default')%>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <!-- 輪播（Carousel）指标 -->
    <ol class="carousel-indicators">
      <li
        data-target="#carouselExampleIndicators"
        data-slide-to="0"
        class="active"
      ></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <!-- 輪播（Carousel）项目 -->
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          class="d-block w-100"
          src="images/index_carousel_01.png"
          alt="First slide"
        />
      </div>
      <div class="carousel-item">
        <img
          class="d-block w-100"
          src="images/index_carousel_02.jpg"
          alt="Second slide"
        />
      </div>
      <div class="carousel-item">
        <img
          class="d-block w-100"
          src="images/index_carousel_03.jpg"
          alt="Third slide"
        />
      </div>
      <div class="carousel-item">
        <img
          class="d-block w-100"
          src="images/index_carousel_04.jpg"
          alt="fourth slide"
        />
      </div>
    </div>
    <!-- 輪播（Carousel）导航 -->
    <a
      class="carousel-control-prev"
      href="#carouselExampleIndicators"
      role="button"
      data-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#carouselExampleIndicators"
      role="button"
      data-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <br />
  <div class="card" style="width: 60rem; margin:0 auto;">
    <div
      class="card-header text-white"
      style="text-align: center; background-color: rgb(127, 173, 173);">
      <h1>即時covid19案例個數</h1>
    </div>
    <div class="card-body" style="text-align: center;">
      <blockquote class="blockquote mb-0">
        <h1>
          確診：<span
            id="TotalConfirmed"
            class="badge badge-pill badge-primary"
          ></span> &nbsp;&nbsp;&nbsp;
          死亡：<span
            id="TotalDeaths"
            class="badge badge-pill badge-danger"
          ></span> &nbsp;&nbsp;&nbsp;
          解除隔離:<span
            id="TotalRecovered"
            class="badge badge-pill badge-success"
          ></span>
        </h1>
      </blockquote>
    </div>
  </div>
  
  <script>
    //創建一個請求變量，並為其分配一個新的XMLHttpRequest對象。
    var request = new XMLHttpRequest();
    //使用URL端點 上的GET請求打開新連接
    request.open("get", "https://api.covid19api.com/summary", true);
    request.send(null); //發送請求
    request.onload = function (data) {
      //在這裡開始訪問JSON數據
  
      var obj = JSON.parse(request.responseText);
      for (let i = 0; i < obj.Countries.length; i++) {
        if (obj.Countries[i].Country === "Taiwan, Republic of China") {
          console.log(obj.Countries[i]);
          document.getElementById("TotalConfirmed").innerHTML =
            obj.Countries[i].TotalConfirmed;
          document.getElementById("TotalDeaths").innerHTML =
            obj.Countries[i].TotalDeaths;
          document.getElementById("TotalRecovered").innerHTML =
            obj.Countries[i].TotalRecovered;
          break;
        }
      }
    };
  </script>